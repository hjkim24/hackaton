generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model User {
  id            Int    @id @default(autoincrement())
  username      String @unique
  password      String
  nickname      String @unique
  name          String
  gender        Gender
  college       String
  major         String
  admissionYear Int

  Preference   Preference[]
  likedBy      Like[]       @relation("liked_by")
  likeTo       Like[]       @relation("like_to")
  SpareTime    SpareTime[]
  sentMessages Message[]    @relation("sender")
  chatRooms    ChatRoom[]   @relation("participants")
}

enum days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model SpareTime {
  id        Int    @id @default(autoincrement())
  spareTime String
  day       days
  user      User?  @relation(fields: [userId], references: [id])
  userId    Int?
}

model Preference {
  id         Int    @id @default(autoincrement())
  preference String
  user       User?  @relation(fields: [userId], references: [id])
  userId     Int?
}

model Like {
  id Int @id @default(autoincrement())

  likedByUser   User? @relation("liked_by", fields: [likedByUserId], references: [id])
  likedByUserId Int?
  likedToUser   User? @relation("like_to", fields: [likedToUserId], references: [id])
  likedToUserId Int?

  @@unique([likedByUserId, likedToUserId])
}

model ChatRoom {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  participants User[]    @relation("participants")
  messages     Message[]
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())

  sender   User @relation("sender", fields: [senderId], references: [id])
  senderId Int

  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  chatRoomId Int
}
