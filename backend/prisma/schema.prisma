generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

model User {
  id            Int    @id @default(autoincrement())
  username      String @unique
  password      String
  nickname      String @unique
  name          String
  gender        Gender
  college       String
  major         String
  admissionYear Int

  Preference Preference[]
  likedBy    Like[]       @relation("liked_by")
  likeTo     Like[]       @relation("like_to")
  SpareTime  SpareTime[]
}

enum days {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

model SpareTime {
  id        Int    @id @default(autoincrement())
  spareTime String
  day       days
  user      User?  @relation(fields: [userId], references: [id])
  userId    Int?
}

model Preference {
  id         Int    @id @default(autoincrement())
  preference String
  user       User?  @relation(fields: [userId], references: [id])
  userId     Int?
}

model Like {
  id Int @id @default(autoincrement())

  likedByUser   User? @relation("liked_by", fields: [likedByUserId], references: [id])
  likedByUserId Int?
  likedToUser   User? @relation("like_to", fields: [likedToUserId], references: [id])
  likedToUserId Int?

  @@unique([likedByUserId, likedToUserId])
}
